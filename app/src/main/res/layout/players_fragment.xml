<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_bottom_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lzm.scythe.scythehelper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/players_setup"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="space_around">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/players_number" />

            <Spinner
                android:id="@+id/players_number_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp" />

            <Button
                android:id="@+id/players_do_setup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/players_do_setup"
                android:theme="@style/GreenButton" />
        </com.google.android.flexbox.FlexboxLayout>

        <include
            android:id="@+id/player1_layout"
            layout="@layout/player_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/player2_layout"
            layout="@layout/player_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/player3_layout"
            layout="@layout/player_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/player4_layout"
            layout="@layout/player_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/player5_layout"
            layout="@layout/player_layout"
            android:visibility="gone" />

        <Button
            android:id="@+id/players_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/players_continue"
            android:theme="@style/GreenButton"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>

