<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/popularity_player_label"
        style="@style/popularity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/popularity_player_value"
        android:text="@string/popularity_player_label" />

    <EditText
        android:id="@+id/popularity_player_value"
        style="@style/popularity_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>